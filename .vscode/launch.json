{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with nodemon",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": [
          "--inspect"
        ],
        "envFile": "${workspaceRoot}/.env",
        "args": [
          "${workspaceFolder}/index.js"
        ],
        "restart": true,
        "console": "integratedTerminal"
      }
    ]
  }
